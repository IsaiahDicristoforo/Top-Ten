<?xml version="1.0" encoding="utf-8"?>
<set android:duration="800" xmlns:android="http://schemas.android.com/apk/res/android">

    <scale

        android:fromYScale="1"
        android:fromXScale="1"
        android:toYScale="1.2"
        android:toXScale="1.2"
        android:pivotX="50%"
        android:pivotY="50%"

        />
    <rotate

        android:pivotY="50%"
        android:pivotX="50%"
        android:toDegrees="30"
        android:fromDegrees="0"
        />


</set>